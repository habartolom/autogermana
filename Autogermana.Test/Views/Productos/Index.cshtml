
@{
    ViewData["Title"] = "Productos";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Productos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo Producto</a>
        </div>

    </div>

    <br />
    <br />
    <table id="tblArticulos" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id Producto</th>
                <th>Id Categoría</th>
                <th>Código</th>
                <th>Nombre</th>
                <th>Precio de Venta</th>
                <th>Stock</th>
                <th>Descripción</th>
                <th>Imagen</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/productos.js"></script>

}
