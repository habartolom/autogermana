@model Autogermana.Test.Models.Categoria
@{
    ViewData["Title"] = "Edit";
}

<br />
<br />
<h3 class="text-center"> Editar categoría</h3>
<form method="post" asp-action="Create">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Idcategoria"/>
        <div class="col-10 offset-1 mt-3">
            <div class="form-group row">
                <div class="col-4 my-3">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 my-3">
                    <label asp-for="Descripcion">Descripción</label>
                </div>
                <div class="col-8">
                    <input asp-for="Descripcion" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 my-3">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Estado" class="form-control" />
                </div>
            </div>

            <div class="form-group row my-3">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Idcategoria"> Actualizar</button>
                            &nbsp;
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

